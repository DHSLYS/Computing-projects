from microbit import *
import random

while True:
    display.show(Image.HAPPY)
    if accelerometer.is_gesture('shake'):
        display.clear()
        sleep(1000)
        answer = random.int("1,6")
        
        if answer = 1:
            one = image("00000:00000:00900:00000:00000")
            display.show(one)
            
        elif answer = 2:
            two = image("00000:00090:00000:09000:00000")
            display.show(two)
            
        elif answer = 3:
            three = image("00009:00000:00900:00000:90000")
            display.show(three)
        
        elif answer = 4:
            four = image("00000:09090:00000:09090:00000")
            display.show(four)  

        elif answer == 5:
            five = image("00000:09090:00900:09090:00000")
            display.show(five)

        elif answer == 6:
            six = Image("09090:00000:09090:00000:09090")
            display.show(six)
        
